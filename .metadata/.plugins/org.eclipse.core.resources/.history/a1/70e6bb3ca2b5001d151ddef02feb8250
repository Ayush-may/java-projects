
public class Ball {
	
	private int ballSize;
	private int ballX, ballY;
	private int SCREEN_HEIGHT;
	private int SCREEN_WIDTH;
	Ball(int ballSize, int ballX,int ballY){
		this.ballSize = ballSize;
		this.ballX = ballX;
		this.ballY = ballY;
	}
	public int getBallDimX() {
		return ballSize;
	}
	public int getX() {
		return ballX;
	}
	public int getY() {
		return ballY;
	}
}
